#!/bin/bash
A_FNT='-*-microsoft yahei-medium-r-normal-*-14-*-*-*-*-*-*-*'
message=$1
CAPTION="^i(/home/home/tools/awesome/info.xpm)"
if [ $# == 2 ]; then
	(echo $CAPTION $message) | dzen2 -h 65 -w 600 -p $2 -y 650 -x 820 -bg gray10 -ta l -fn "$A_FNT";
fi
if [ $# == 1 ]; then
	(echo $CAPTION $message) | dzen2 -h 65 -w 600 -p 3 -y 650 -x 820 -bg gray10 -ta l -fn "$A_FNT";
fi
if [ $# == 3 ]; then
	CAPTION="^i(/home/home/tools/awesome/$3)"
	(echo $CAPTION $message) | dzen2 -h 65 -w 600 -p $2 -y 650 -x 820 -bg gray10 -ta l -fn "$A_FNT";
fi
